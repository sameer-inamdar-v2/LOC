@page "/OfferWizard"
@inject NavigationManager _nav
@inject IJSRuntime JsRuntime


<!-- MultiStep Form -->
<div class="container-fluid">
    <form id="regForm" action="/offerspage">

        <!-- Circles which indicates the steps of the form: -->
        <div style="text-align:center;">
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
        </div>
        <hr />
        <!-- One "tab" for each step in the form: -->
        <div class="tab">
            <center><h3>Greate! What type of property are you purchasing?</h3></center>
            <hr />
            <div class="radio-tile-group">

                <div class="input-container">
                    <input id="walk" AutomationId="walk" class="radio-button" type="radio" @onclick="@(() => IncrementCount("Home"))" name="radio" />
                    <div class="radio-tile">


                        <div class="icon walk-icon">
                            <img width="70px" src="img/condo.png" />

                            @* <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24"><path d="M21 13v10h-6v-6h-6v6h-6v-10h-3l12-12 12 12h-3zm-1-5.907v-5.093h-3v2.093l3 3z" /></svg> *@
                        </div>
                        <label for="walk" class="radio-tile-label">Condominium</label>
                    </div>
                </div>

                <div class="input-container">
                    <input id="bike" AutomationId="bike" href="Step2" class="radio-button" type="radio" @onclick="@(() => IncrementCount("Personal"))" name="radio" />
                    <div class="radio-tile">
                        <div class="icon bike-icon">
                            <img width="85px" src="img/duplex.png" />

                            @*  <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0 0h24v24H0z" fill="none" />
                            <path d="M15.5 5.5c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zM5 12c-2.8 0-5 2.2-5 5s2.2 5 5 5 5-2.2 5-5-2.2-5-5-5zm0 8.5c-1.9 0-3.5-1.6-3.5-3.5s1.6-3.5 3.5-3.5 3.5 1.6 3.5 3.5-1.6 3.5-3.5 3.5zm5.8-10l2.4-2.4.8.8c1.3 1.3 3 2.1 5.1 2.1V9c-1.5 0-2.7-.6-3.6-1.5l-1.9-1.9c-.5-.4-1-.6-1.6-.6s-1.1.2-1.4.6L7.8 8.4c-.4.4-.6.9-.6 1.4 0 .6.2 1.1.6 1.4L11 14v5h2v-6.2l-2.2-2.3zM19 12c-2.8 0-5 2.2-5 5s2.2 5 5 5 5-2.2 5-5-2.2-5-5-5zm0 8.5c-1.9 0-3.5-1.6-3.5-3.5s1.6-3.5 3.5-3.5 3.5 1.6 3.5 3.5-1.6 3.5-3.5 3.5z" />
                            </svg> *@
                        </div>
                        <label for="bike" class="radio-tile-label">Duplex</label>
                    </div>
                </div>

                <div class="input-container">
                    <input id="drive" AutomationId="drive" class="radio-button" type="radio" name="radio" />
                    @* <input id="drive" class="radio-button" type="radio" @onclick="@(() => _nav.NavigateTo("/Step2"))" name="radio" /> *@
                    <div class="radio-tile">
                        <div class="icon car-icon">
                            <img width="70px" src="img/single_fam_home.png" />

                            @* <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z" />
                            <path d="M0 0h24v24H0z" fill="none" />
                            </svg> *@
                        </div>
                        <label for="drive" class="radio-tile-label">Single House</label>
                    </div>
                </div>

                <div class="input-container">
                    <input id="fly" AutomationId="fly" class="radio-button" @onclick="@(() => IncrementCount("Gold"))" type="radio" name="radio" />
                    <div class="radio-tile">
                        <div class="icon fly-icon">
                            <img width="50px" src="img/townhouse.png" />

                            @* <svg xmlns="http://www.w3.org/2000/svg" data-name="Layer 1" viewBox="0 0 24 24"><path d="M8,11h8a1,1,0,0,0,.77-.37A1,1,0,0,0,17,9.8l-1-5A1,1,0,0,0,15,4H9a1,1,0,0,0-1,.8l-1,5a1,1,0,0,0,.21.83A1,1,0,0,0,8,11ZM9.82,6h4.36l.6,3H9.22ZM22,13.8a1,1,0,0,0-1-.8H15a1,1,0,0,0-1,.8l-1,5a1,1,0,0,0,.21.83A1,1,0,0,0,14,20h8a1,1,0,0,0,.77-.37A1,1,0,0,0,23,18.8ZM15.22,18l.6-3h4.36l.6,3ZM9,13H3a1,1,0,0,0-1,.8l-1,5a1,1,0,0,0,.21.83A1,1,0,0,0,2,20h8a1,1,0,0,0,.77-.37A1,1,0,0,0,11,18.8l-1-5A1,1,0,0,0,9,13ZM3.22,18l.6-3H8.18l.6,3Z" /></svg> *@
                        </div>
                        <label for="fly" class="radio-tile-label">Townhome</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab">

            <center><h3>What is the estimated purchase price?</h3></center>
            <hr />

            <input type="range" class="custom-range" id="customRange1" AutomationId="customRange1" min="1000" max="100000"
                   onChange="document.getElementById('rangeval').innerText = document.getElementById('customRange1').value">


            <center for="customRange1" class="form-label">
                $<span style="font-size:large" id="rangeval">50000<!-- Default value --></span>
            </center>

        </div>
        <div class="tab">
            <center><h3>Are you currently employed?</h3></center>
            <hr />
            <div class="text-center">
                <div class="btn-group-vertical">
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1" AutomationId="btnradio1" autocomplete="off" checked>
                    <label class="btn btn-outline-primary" for="btnradio1">Full-time</label>

                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2" AutomationId="btnradio2" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnradio2">Part-time </label>

                    <input type="radio" class="btn-check" name="btnradio" id="btnradio3" AutomationId="btnradio3" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnradio3">Self-employed</label>

                    <input type="radio" class="btn-check" name="btnradio" id="btnradio4" AutomationId="btnradio4" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnradio4">No, I am not Employed</label>
                </div>
            </div>
        </div>
        <div class="tab">
            <center><h3>What is your name?</h3></center>
            <hr />
            <div class="text-center">
                <p><input placeholder="First name" oninput="this.className = ''" name="firstname" id="firstNameAut" AutomationId="firstNameAut"></p>
                <p><input placeholder="Last name" oninput="this.className = ''" name="lastname" id="lastNameAut" AutomationId="lastNameAut"></p>
            </div>
        </div>
        <div class="tab">
            <center><h3>City</h3></center>
            <hr />
            <p><input type="text" placeholder="City..." oninput="this.className = ''" name="email" id="emailAut" AutomationId="emailAut"></p>
        </div>


        <div style="overflow:auto;">
            <div style="float:right;">
                <button type="button" class="btn btn-secondary" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
                <button type="button" class="btn btn-primary" id="nextBtn" AutomationId="nextBtn" onclick="nextPrev(1)">Next</button>
            </div>
        </div>
        
    </form>
</div>


@code {
    private string loanType = "";

    private void IncrementCount(string LoanType)
    {
        loanType = LoanType;
    }    

    protected override void OnAfterRender(bool firstRender)
    {
        JsRuntime.InvokeVoidAsync("showTab", 0);
    }
}

